private void MeExit()
{
 DialogResult iExit;
 iExit = MessageBox.Show("Confirm if you want to exit", "Save DataGridView", 
MessageBoxButtons.YesNo, MessageBoxIcon.Information);
 if (iExit == DialogResult.Yes)
 {
 Application.Exit();
 }
}

Also on Exit Menu
private void exitToolStripMenuItem_Click(object sender, EventArgs e)
{
 MeExit();
}
